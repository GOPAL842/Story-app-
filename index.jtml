<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hans Reel App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Roboto, Arial, sans-serif;
        }
        
        body {
            background-color: #f8f9fa;
            color: #333;
        }
        
        .container {
            max-width: 480px;
            margin: 0 auto;
            background: white;
            min-height: 100vh;
            position: relative;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        
        /* Header Styles */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: linear-gradient(to right, #4a00e0, #8e2de2);
            color: white;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        
        .logo {
            font-weight: bold;
            font-size: 1.5rem;
        }
        
        .search-icon, .upload-icon {
            font-size: 1.2rem;
        }
        
        /* Navigation */
        .bottom-nav {
            display: flex;
            justify-content: space-around;
            padding: 12px 0;
            background: white;
            position: fixed;
            bottom: 0;
            width: 100%;
            max-width: 480px;
            border-top: 1px solid #eee;
        }
        
        .nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 0.8rem;
            color: #666;
        }
        
        .nav-item.active {
            color: #8e2de2;
        }
        
        .nav-icon {
            font-size: 1.2rem;
            margin-bottom: 4px;
        }
        
        /* Content Sections */
        .content-section {
            padding: 15px;
            margin-bottom: 60px;
        }
        
        .section-title {
            font-size: 1.2rem;
            margin-bottom: 15px;
            font-weight: 600;
        }
        
        /* Stories Section */
        .stories-container {
            display: flex;
            overflow-x: auto;
            padding: 10px 0;
            gap: 15px;
        }
        
        .story {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        
        .story-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(to right, #ff9966, #ff5e62);
            padding: 2px;
            margin-bottom: 5px;
        }
        
        .story-avatar img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 2px solid white;
            object-fit: cover;
        }
        
        .story-username {
            font-size: 0.8rem;
        }
        
        /* Profile Section */
        .profile-header {
            display: flex;
            align-items: center;
            padding: 15px 0;
        }
        
        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-right: 15px;
            background: linear-gradient(to right, #4a00e0, #8e2de2);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 2rem;
            font-weight: bold;
        }
        
        .profile-stats {
            display: flex;
            gap: 15px;
        }
        
        .stat {
            text-align: center;
        }
        
        .stat-value {
            font-weight: bold;
            font-size: 1.1rem;
        }
        
        .stat-label {
            font-size: 0.8rem;
            color: #666;
        }
        
        /* Reel Item */
        .reel-item {
            margin: 20px 0;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }
        
        .reel-header {
            display: flex;
            align-items: center;
            padding: 10px;
            background: white;
        }
        
        .reel-user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            background: #8e2de2;
        }
        
        .reel-username {
            font-weight: 600;
        }
        
        .reel-video {
            height: 400px;
            background: linear-gradient(to bottom, #8e2de2, #4a00e0);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }
        
        .reel-actions {
            padding: 10px;
            background: white;
            display: flex;
            justify-content: space-around;
        }
        
        .action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #666;
        }
        
        /* Wallet Section */
        .wallet-balance {
            background: linear-gradient(to right, #4a00e0, #8e2de2);
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            margin-bottom: 20px;
        }
        
        .balance-label {
            font-size: 0.9rem;
            margin-bottom: 5px;
        }
        
        .balance-amount {
            font-size: 2rem;
            font-weight: bold;
        }
        
        .transaction-item {
            display: flex;
            justify-content: space-between;
            padding: 15px 0;
            border-bottom: 1px solid #eee;
        }
        
        .transaction-info {
            display: flex;
            flex-direction: column;
        }
        
        .transaction-type {
            font-weight: 600;
        }
        
        .transaction-date {
            font-size: 0.8rem;
            color: #666;
        }
        
        .transaction-amount {
            font-weight: bold;
        }
        
        .positive {
            color: #4caf50;
        }
        
        .negative {
            color: #f44336;
        }
        
        /* Creator Panel */
        .creator-panel {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .panel-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
            margin-top: 15px;
        }
        
        .panel-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            text-align: center;
        }
        
        .panel-icon {
            font-size: 1.5rem;
            margin-bottom: 10px;
            color: #8e2de2;
        }
        
        /* Progress Tracker */
        .progress-tracker {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            text-align: center;
        }
        
        .progress-title {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #333;
        }
        
        .progress-stats {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }
        
        .progress-stat {
            display: flex;
            flex-direction: column;
        }
        
        .progress-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: #8e2de2;
        }
        
        .progress-label {
            font-size: 0.8rem;
            color: #666;
        }
        
        .progress-bar {
            height: 8px;
            background: #eee;
            border-radius: 4px;
            overflow: hidden;
            margin: 10px 0;
        }
        
        .progress-fill {
            height: 100%;
            background: linear-gradient(to right, #4a00e0, #8e2de2);
            width: 72%;
        }
        
        .monetization-status {
            margin-top: 15px;
            padding: 10px;
            background: #ffebee;
            color: #f44336;
            border-radius: 5px;
            font-weight: 600;
        }
        
        /* Tabs */
        .tabs {
            display: flex;
            border-bottom: 1px solid #eee;
            margin-bottom: 15px;
        }
        
        .tab {
            padding: 10px 15px;
            cursor: pointer;
        }
        
        .tab.active {
            border-bottom: 2px solid #8e2de2;
            color: #8e2de2;
            font-weight: 600;
        }
        
        /* Hidden sections */
        .section {
            display: none;
        }
        
        .section.active {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="logo">Hans</div>
            <div class="search-icon"><i class="fas fa-search"></i></div>
            <div class="upload-icon"><i class="fas fa-plus"></i></div>
        </div>
        
        <!-- Main Content -->
        <div class="content-section active" id="home-section">
            <!-- Stories -->
            <div class="stories-container">
                <div class="story">
                    <div class="story-avatar">
                        <div style="width: 100%; height: 100%; background: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; color: #8e2de2;">
                            <i class="fas fa-plus"></i>
                        </div>
                    </div>
                    <div class="story-username">Your Story</div>
                </div>
                <div class="story">
                    <div class="story-avatar">
                        <div style="width: 100%; height: 100%; background: #ff9966; border-radius: 50%;"></div>
                    </div>
                    <div class="story-username">Alice</div>
                </div>
                <div class="story">
                    <div class="story-avatar">
                        <div style="width: 100%; height: 100%; background: #4a00e0; border-radius: 50%;"></div>
                    </div>
                    <div class="story-username">John</div>
                </div>
                <div class="story">
                    <div class="story-avatar">
                        <div style="width: 100%; height: 100%; background: #8e2de2; border-radius: 50%;"></div>
                    </div>
                    <div class="story-username">Emma</div>
                </div>
            </div>
            
            <!-- Reel -->
            <div class="reel-item">
                <div class="reel-header">
                    <div class="reel-user-avatar"></div>
                    <div class="reel-username">hans_creator</div>
                </div>
                <div class="reel-video">
                    <i class="fas fa-play-circle"></i>
                </div>
                <div class="reel-actions">
                    <div class="action-btn">
                        <i class="fas fa-heart"></i>
                        <span>Like</span>
                    </div>
                    <div class="action-btn">
                        <i class="fas fa-comment"></i>
                        <span>Comment</span>
                    </div>
                    <div class="action-btn">
                        <i class="fas fa-share"></i>
                        <span>Share</span>
                    </div>
                </div>
            </div>
            
            <!-- Caption -->
            <div style="padding: 10px;">
                <p><strong>Hans</strong> First reel on Hans! #trending</p>
                <p style="color: #666; font-size: 0.9rem; margin-top: 5px;">Original sound â€” Hans App</p>
            </div>
        </div>
        
        <!-- Wallet Section -->
        <div class="content-section" id="wallet-section">
            <div class="section-title">Wallet</div>
            
            <div class="wallet-balance">
                <div class="balance-label">Balance</div>
                <div class="balance-amount">$120.50</div>
            </div>
            
            <div class="section-title">Transactions</div>
            
            <div class="transaction-item">
                <div class="transaction-info">
                    <div class="transaction-type">Payment</div>
                    <div class="transaction-date">April 12, 2024</div>
                </div>
                <div class="transaction-amount negative">-$20.00</div>
            </div>
            
            <div class="transaction-item">
                <div class="transaction-info">
                    <div class="transaction-type">Gift</div>
                    <div class="transaction-date">April 10, 2024</div>
                </div>
                <div class="transaction-amount positive">+$50.00</div>
            </div>
            
            <div class="transaction-item">
                <div class="transaction-info">
                    <div class="transaction-type">Cashback</div>
                    <div class="transaction-date">April 8, 2024</div>
                </div>
                <div class="transaction-amount positive">+$10.00</div>
            </div>
            
            <div class="transaction-item">
                <div class="transaction-info">
                    <div class="transaction-type">Payment</div>
                    <div class="transaction-date">April 4, 2024</div>
                </div>
                <div class="transaction-amount negative">-$30.00</div>
            </div>
        </div>
        
        <!-- Creator Panel Section -->
        <div class="content-section" id="creator-section">
            <div class="section-title">Creator Panel</div>
            
            <div class="panel-grid">
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-upload"></i></div>
                    <div>Upload</div>
                </div>
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-list"></i></div>
                    <div>All</div>
                </div>
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-edit"></i></div>
                    <div>Edit</div>
                </div>
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-comments"></i></div>
                    <div>Comments</div>
                </div>
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-robot"></i></div>
                    <div>AI Tools</div>
                </div>
                <div class="panel-item">
                    <div class="panel-icon"><i class="fas fa-language"></i></div>
                    <div>Language</div>
                </div>
            </div>
            
            <div class="section-title" style="margin-top: 20px;">Revenue Tracker</div>
            <div class="creator-panel">
                <p>Track your earnings and revenue from content</p>
            </div>
            
            <div class="section-title">Ad Report</div>
            <div class="creator-panel">
                <p>View performance analytics for your ads</p>
            </div>
            
            <div class="section-title">Creator Progress Tracker</div>
            <div class="progress-tracker">
                <div class="progress-title">MONETIZATION UNLOCK PROGRESS</div>
                
                <div class="progress-stats">
                    <div class="progress-stat">
                        <div class="progress-value">72/100</div>
                        <div class="progress-label">Followers</div>
                    </div>
                    <div class="progress-stat">
                        <div class="progress-value">3,820/5.000</div>
                        <div class="progress-label">Total Views</div>
                    </div>
                </div>
                
                <div class="progress-bar">
                    <div class="progress-fill"></div>
                </div>
                
                <div class="monetization-status">
                    Monetization Locked
                </div>
            </div>
            
            <div class="section-title">AI Monetization Evaluation</div>
            <div class="creator-panel">
                <p>AI analysis of your content monetization potential</p>
            </div>
        </div>
        
        <!-- Profile Section -->
        <div class="content-section" id="profile-section">
            <div class="profile-header">
                <div class="profile-avatar">H</div>
                <div>
                    <h2>Hans</h2>
                    <p>@hans_creator</p>
                    <div class="profile-stats">
                        <div class="stat">
                            <div class="stat-value">120</div>
                            <div class="stat-label">Followers</div>
                        </div>
                        <div class="stat">
                            <div class="stat-value">80</div>
                            <div class="stat-label">Following</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="tabs">
                <div class="tab active">Reels</div>
                <div class="tab">Saved</div>
                <div class="tab">Liked</div>
            </div>
            
            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2px;">
                <div style="height: 150px; background: linear-gradient(to bottom, #4a00e0, #8e2de2);"></div>
                <div style="height: 150px; background: linear-gradient(to bottom, #ff9966, #ff5e62);"></div>
                <div style="height: 150px; background: linear-gradient(to bottom, #3a7bd5, #00d2ff);"></div>
                <div style="height: 150px; background: linear-gradient(to bottom, #56ab2f, #a8e063);"></div>
                <div style="height: 150px; background: linear-gradient(to bottom, #8e2de2, #4a00e0);"></div>
                <div style="height: 150px; background: linear-gradient(to bottom, #ff5e62, #ff9966);"></div>
            </div>
        </div>
        
        <!-- Bottom Navigation -->
        <div class="bottom-nav">
            <div class="nav-item active" onclick="showSection('home-section')">
                <div class="nav-icon"><i class="fas fa-home"></i></div>
                <div>Home</div>
            </div>
            <div class="nav-item" onclick="showSection('wallet-section')">
                <div class="nav-icon"><i class="fas fa-wallet"></i></div>
                <div>Wallet</div>
            </div>
            <div class="nav-item" onclick="showSection('creator-section')">
                <div class="nav-icon"><i class="fas fa-user-plus"></i></div>
                <div>Creator</div>
            </div>
            <div class="nav-item" onclick="showSection('profile-section')">
                <div class="nav-icon"><i class="fas fa-user"></i></div>
                <div>Profile</div>
            </div>
        </div>
    </div>

    <script>
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show the selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Update active nav item
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Find the nav item that corresponds to the section and activate it
            const navItems = document.querySelectorAll('.nav-item');
            for (let item of navItems) {
                if (item.getAttribute('onclick').includes(sectionId)) {
                    item.classList.add('active');
                    break;
                }
            }
        }
    </script>
</body>
</html>
